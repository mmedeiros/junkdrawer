#!/bin/sh

gituser=mmedeiros    # user on github
localuser=mmedeiros  # user on the box

# Derived variables
url=https://github.com/$gituser/dotfiles/archive/master.tar.gz
path=/home/$localuser
tmp=dot.tar.gz

echo "curl -L $url >>$tmp 2>/dev/null && tar -xzf $tmp && mv -f dotfiles-master/.[^.]* $path && rm -rf $path/dotfiles-master && rm $tmp && source $path/.bashrc"
